<div class="container">
	<div class="page-header">
		<h1>Team Rankings</h1>
		<p class="lead">All the teams, ranked.</p>
	</div>

  <table class="table table-hover span3">
    <thead>
      <tr>
        <th>#</th>
        <th>&nbsp;</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
    <% @teams.each_with_index do |team, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><img src="<%= transform_logo(team.logo) %>" /></td>
        <td><%= team.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
